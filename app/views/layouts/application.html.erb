<!DOCTYPE html>
<html>
  <head>
    <title>Bookers23</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1ccc9ca859.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>




      <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <li class="navbar-brand">
             <%= link_to "Bookers", root_path, class: 'text-light' %>
          </li>
        <ul>
          <li class="navbar-brand">
             <%= link_to user_path(current_user.id), class: 'text-light' do %>
             <i class="fa-solid fa-house"></i>Home
             <% end %>
          </li>
          <li class="navbar-brand">
             <%= link_to users_path,class: 'text-light' do %>
             <i class="fa-solid fa-users"></i>Users
             <% end %>
          </li>
          <li class="navbar-brand">
              <%= link_to books_path, class: 'text-light' do %>
              <i class="fa-solid fa-book-open"></i>Books
              <% end %>
          </li>
          <li class="navbar-brand">
              <%= link_to destroy_user_session_path, method: :delete,class: 'text-light' do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log Out
              <% end %>
           </li>
          </ul>
         </nav>
         <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
           <li class="navbar-brand">
            <%= link_to "Bookers",root_path,class: 'text-light' %>
           </li>
        <ul>
           <li class="navbar-brand">
           <%= link_to root_path, class: 'text-light' do %>
           <i class="fa-solid fa-house"></i>Home
           <% end %>
           </li>
           <li class="navbar-brand">
           <%= link_to about_path, class: 'text-light' do %>
           <i class="fa-solid  fa-link"></i>About
           <% end %>
          </li>

          <li class="navbar-brand">
          <%= link_to new_user_registration_path,class: 'text-light' do %>
          <i class="fa-solid fa-user-plus"></i>Sign up
          <% end %>
          </li>
          <li class="navbar-brand">
          <%= link_to new_user_session_path,class: 'text-light' do %>
          <i class="fa-solid fa-right-to-bracket"></i>Log in
          <% end %>
          </li>
         </ul>
       </nav>
     <% end %>
    </header>

     <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
     <% end %>


     <!--% flash.each do |message_type, message| %>
      <!%= content_tag (:div, message, class: message_type) %>
     <!--% end %-->

    <main>
       <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>


 </body>
</html>



