<div class="container">

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  
  <div class="form-group">
    <input type="hidden" name="commit" class="btn btn-success" >
    <%= f.submit 'Update Book' %>
  </div>  

<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

</div>
