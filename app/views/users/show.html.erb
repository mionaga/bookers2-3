<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <!--user情報-->
     <%= render 'books/info', user: @user %>
     <!--NewBookの投稿-->
     <%= render 'books/create_book', book: @book %>
   </div>
<div class="col-md-8 offset-md-1">
<!-- booksの投稿一覧 -->
<h1>Books</h1>

<table class="table table-hober table-inverse">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path do %>
          <%= book.title %><% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>